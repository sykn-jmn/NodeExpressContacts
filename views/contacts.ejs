<div style="display: flex; flex-wrap: wrap; align-items: flex-start; justify-content: center;">
    <div class="container">
        <div style="display: flex; justify-content: space-between;">
            <h2>Contacts</h2>
            <button id="addContact" class="btn btn-primary h-50"><i class="bi bi-plus" style="font-size: xlarge;"></i></button>
        </div>
        <div class="contacts overflow-auto">
            <table class="peopletbl">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                    </tr>

                </thead>
                <tbody class="contactsBody">
                    <% contacts.forEach(i => {%>
                    <tr data-id = '<%- functions.encrypt(i.id) %>'>
                        <th><%= i.id %></th>
                        <th><%= i.firstname %></th>
                        <th><%= i.lastname %></th>
                        <th style="opacity: 0;"><button class="btn btn-primary deleteContact"><i class="bi bi-x"></i></button></th>
                    </tr>
                    <% })%>
                </tbody>
            </table>
        </div>
    </div>
</div>