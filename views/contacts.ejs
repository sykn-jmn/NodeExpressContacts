<div style="display: flex; flex-wrap: wrap; align-items: flex-start; justify-content: center;">
    <div class="container">
        <div style="display: flex; justify-content: space-between;">
            <h2>Contacts</h2>
            <button id="addContact" class="button" style="height: fit-content; margin: 15px 30px 0px; font-size: large;">+</button>
        </div>
        <div class="contacts">
            <table class="peopletbl">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                    </tr>

                </thead>
                <tbody>
                    <% contacts.forEach(i => {%>
                    <tr data-id = '<%- i.id %>'>
                        <th><%= i.id %></th>
                        <th><%= i.firstname %></th>
                        <th><%= i.lastname %></th>
                        <th><button onclick="deleteContact('<%= i.id %>')" class="button">x</button></th>
                    </tr>
                    <% })%>
                </tbody>
            </table>
        </div>
    </div>
</div>